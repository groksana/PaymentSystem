<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-http="http://www.springframework.org/schema/integration/http"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/integration
    http://www.springframework.org/schema/integration/spring-integration.xsd
    http://www.springframework.org/schema/integration/http
    http://www.springframework.org/schema/integration/http/spring-integration-http.xsd">

    <int:channel id="getInputChannel"/>
    <int:channel id="getOutputChannel"/>
    <int-http:inbound-gateway request-channel="getInputChannel"
                              reply-channel="getOutputChannel" supported-methods="GET"
                              path="/payment/{id}"
                              payload-expression="#pathVariables.id">

    <int-http:request-mapping consumes="application/json" produces="application/json"/>
    </int-http:inbound-gateway>

    <int:service-activator ref="inboundEnpoint"
                           method="getById" input-channel="getInputChannel" output-channel="getOutputChannel"/>
    <bean id="inboundEnpoint" class="com.gromoks.paymentsystem.endpoint.InboundEndpoint" />

    <int:channel id="postInputChannel"/>
    <int:channel id="postOutputChannel"/>
    <int-http:inbound-gateway request-channel="postInputChannel"
                              reply-channel="postOutputChannel" supported-methods="POST"
                              path="/payment"
                              request-payload-type="com.gromoks.paymentsystem.model.Payment">

        <int-http:request-mapping consumes="application/json" produces="application/json"/>
    </int-http:inbound-gateway>

    <int:service-activator ref="inboundEnpoint"
                           method="post" input-channel="postInputChannel" output-channel="postOutputChannel"/>
</beans>